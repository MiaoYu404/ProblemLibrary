{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "编译",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/debug/code.o"
            ],
            "options": {
                // current working directory
                "cwd": "${workspaceFolder}/debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "d:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "d:\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "生成可执行文件。"
        }
    ],
    "version": "2.0.0"
}